<div class="container">
  <div class="header d-flex justify-content-between">
    <div class="page-title">
      <h1>Jeej Articles</h1>
      <p class="subtitle">You can post anything you want in here.</p>
      <p class="subtitle">I might delete it.</p>
    </div>
    <div class="flex-item">
      <%= link_to '+ Post', new_article_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="main-content">
    <% @articles.all.each do |article| %>
      <%= link_to article_path(article) do %>
        <div class="article-preview">
          <h2 class="preview-title"><%= article.title %></h2>
          <p class="preview-description"></p><%= article.description %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
